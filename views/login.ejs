    <style>
      body {
        margin: 0;
        font-family: "Dancing Script", cursive;
        background-color: #f5f5f5;
        color: #333;
      }

      header {
        background-color: #4b90d4;
        color: #ecf0f1;
        text-align: center;
        padding: 20px;
      }

      header h1 {
        margin: 0;
        font-size: 2em;
      }

      header p {
        margin-top: 5px;
      }

      .login-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      .login-container h2 {
        font-size: 2em;
        margin-bottom: 20px;
        color: #3498db;
      }

      .form-group {
        margin-bottom: 20px;
      }

      .form-group label {
        font-size: 1.2em;
        display: block;
        margin-bottom: 5px;
      }

      .form-group input {
        width: 100%;
        padding: 5px;
        font-size: 1em;
        border: 1px solid #ccc;
        border-radius: 5px;
      }

      .forgot-password {
        text-align: right;
        font-size: 0.9em;
        color: #555;
      }

      .login-button {
        display: block;
        width: 100%;
        padding: 5px;
        font-size: 1.2em;
        color: #fff;
        background-color: #3498db;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }

      .login-button:hover {
        background-color: #f9f9ff;
        color: #3498db;
        border: 1px solid #3498db;
      }

      .create-account {
        text-align: center;
        margin-top: 20px;
        font-size: 1.1em;
      }

      .create-account a {
        color: #3498db;
        text-decoration: none;
      }

      .create-account a:hover {
        text-decoration: underline;
      }
      .navbar-brand {
        transition: transform 0.3s ease-in-out; /* Add a transition for a smooth effect */
      }

      .navbar-brand:hover {
        transform: scale(1.1); /* Adjust the scaling factor as needed */
      }
      @keyframes enlargeOnHover {
        0% {
          transform: scale(1);
        }
        100% {
          transform: scale(1.1);
        }
      }
    </style>
  </head>
